{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@util/*": ["src/js/controller/util/*"],
            "@controller/*": ["src/js/controller/*"],
            "@GameEngine/*": ["src/js/GameEngine/*"],
            "@Scenes/*": ["src/js/GameEngine/scenes/*"],
            "@js/*": ["src/js/*"]
        }
    },
    "exclude": [
        "node_modules/*", "dist/*", ".github/*", ".vscode/*"
    ]
}